# Container image (set by CI pipeline)
IMAGE={{ cookiecutter.__container_registry }}/{{ cookiecutter.__target }}
IMAGE_TAG=latest

# Domain configuration
DOMAIN={{ cookiecutter.project_name }}.example.com
DOMAIN_MAINTENANCE=admin.{{ cookiecutter.project_name }}.example.com

# TLS
CERT_ISSUER=letsencrypt-prod

# Replicas
BACKEND_REPLICAS=2
{% if cookiecutter.include_frontend == "yes" %}
FRONTEND_REPLICAS=2
{% endif %}

# PostgreSQL (CloudNativePG)
PG_INSTANCES=2
PG_STORAGE=20Gi
